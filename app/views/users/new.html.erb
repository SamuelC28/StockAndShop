<h1>Register:</h1>


<div class="form-group">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :fullname %>
      <p><%= f.text_field :fullname, placeholder: "fullname", class: "form-control" %></p>
     
      <%= f.label :email %>
      <p><%= f.email_field :email, placeholder: "example@email.com", class: "form-control"  %></p>
      
      <%= f.label :password %>
      <p><%= f.password_field :password, placeholder: "password", class: "form-control" %></p>
       
      <%= f.label :admin, "Check Box If You Are A Company Owner" %>
      <%= f.check_box :admin %><br><br>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>