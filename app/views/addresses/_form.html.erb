

<div class="form-group">
  <div class="col-md-6 col-md-offset-3">
   
    <%= form_for(@address) do |f| %>
        <div class="field">
        <%= f.label :receiver, "Receiver's Name " %><br>
        <%= f.text_field :receiver, placeholder: "Receiver", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :company %><br>
        <%= f.text_field :company, placeholder: "Company", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :street %><br>
        <%= f.text_field :street, placeholder: "1st Street", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :street_extra, 'Suite / Apartment' %><br>
        <%= f.text_field :street_extra, placeholder: "2nd Street (optional)", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city, placeholder: "city", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :postal_code, "Zip / Postcode" %><br>
        <%= f.text_field :postal_code, maxlength: 10, placeholder: "Zip/Postal Code", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :state %><br>
        <%= f.text_field :state, placeholder: "State", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :country %><br>
        <%= f.text_field :country, placeholder: "Country", class: "form-control"  %>
        </div>
        <div class="field">
        <%= f.label :phone %><br>
        <%= f.text_field :phone, placeholder: "Phone", class: "form-control"  %>
        </div>
        <div class="actions">
         <%= f.submit "Create Address", class: "btn btn-primary" %>
        </div>

    <% end %>
  </div>
</div

