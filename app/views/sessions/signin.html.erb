
<br/><br/><br/>
<h1>Sign In</h1>

<div class="row form-group">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :user, url: '/signin' do |f| %>
      
      <%= f.label :fullname, "Select your full-name" %><br/>
      <%= f.collection_select :fullname, User.all, :fullname, :fullname, prompt: true %><br/><br/>

      <%= f.label :password %>
      <p><%= f.password_field :password, class: 'form-control', placeholder: "Password" %></p>

      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to 'Login With Facebook', '/auth/facebook' %>
</div>